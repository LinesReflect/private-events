<% if user_signed_in? %>
    <p>User: <%= current_user.username %></p>
<% end %>
<%= link_to "Home", root_path unless request.path == root_path %>
<%= link_to "Sign Up", new_user_registration_path unless request.path == new_user_registration_path || user_signed_in? %>
<%= link_to "Sign In", new_user_session_path unless request.path == new_user_session_path || user_signed_in? %>
<%= link_to "Create Event", new_event_path unless request.path == "/events/new" || !user_signed_in? %>
<%= link_to "My Profile", current_user unless !user_signed_in? || request.path == "/users/#{current_user.id}" %>
<%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete } if user_signed_in? %>
