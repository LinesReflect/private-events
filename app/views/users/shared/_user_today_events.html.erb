<h2>Today's Events</h2>

<% if @user.events.none? { |event| event.event_date == Date.today }  %>
    <p>No events are scheduld for today...</p>
<% else %>
    <ul>
        <% @user.events.each do |event| %>
            <% next unless event.event_date.to_date == Date.today %>
            <li>
                <h3><%= event.title %></h3>
                <p> Location: <%= event.location %></p>
                <p>Date: <%= event.event_date %></p>
            </li>
        <% end %>
    </ul>
<% end %>