<h2>Past Events</h2>

<% if @user.events.past.none? %>
    <p>No events have concluded...</p>
<% else %>
    <ul>
        <% @user.events.past.sort_by { |k, v| k[:event_date] }.each do |event| %>
            <li>
                <h3><%= link_to event.title, event %></h3>
                <p> Location: <%= event.location %></p>
                <p>Date: <%= event.event_date.strftime('%A, %B %e, %Y') %></p>
            </li>
        <% end %>
    </ul>
<% end %>